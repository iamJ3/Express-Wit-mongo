<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini-Project</title>
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900">
    <div class="w-full h-full  p-10 text-white">
        <div class="nav mb-10">
            <a class="text-zinc-200 underline" href="/"> Back To Home</a>
            <!-- <a class="text-zinc-500" href="/">Read Users</a> -->
        </div>
        <h1 class="text-3xl mb-3 tracking-tighter">All User</h1>
        <div class="users flex flex-wrap gap-3">
           <% users.forEach(function (user) {%>
             <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full bg-zinc-700 h-62 rounded-lg">
                    <img class="w-full h-full object-cover " src="<%= user.img  %>" alt="">
                </div>
                <h3 class="text-2xl tracking-tighter "><%= user.name  %> </h3>
                <h5 class="text-xl text-zinc-300 tracking-tighter "><%= user.email  %> </h5>
                <div class="flex mt-10 gap-3">
                    <a class="text-zinc-600 " href="">Edit User</a>
                    <a class="text-red-500" href="/delete/<%= user._id  %>">Delete User</a>
                </div>
            </div>
            
         <%  }); %>
          
        </div>
    </div>
</body>
</html>